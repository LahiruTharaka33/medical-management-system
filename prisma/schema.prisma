generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  name          String
  email         String       @unique
  password      String
  role          String       @default("USER") // 'USER' or 'ADMIN'
  accessGroupId String?
  accessGroup   AccessGroup? @relation(fields: [accessGroupId], references: [id], onDelete: SetNull)
  patients      Patient[]    @relation("CreatedPatients")
}

model AccessGroup {
  id          String    @id @default(uuid())
  groupId     String    @unique
  groupName   String
  description String?
  users       User[]
  patients    Patient[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Patient {
  id            String       @id @default(uuid())
  nic           String       @unique
  firstName     String
  lastName      String
  age           Int
  gender        String
  address       String?
  occupation    String?
  accessGroupId String?
  accessGroup   AccessGroup? @relation(fields: [accessGroupId], references: [id], onDelete: SetNull)
  createdById   String
  createdBy     User         @relation("CreatedPatients", fields: [createdById], references: [id])
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt  
  vitalSigns    VitalSigns[]
}

model VitalSigns {
  id               String   @id @default(uuid())
  patientId        String
  patient          Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  systolicBP       Int?     // mmHg
  diastolicBP      Int?     // mmHg
  heartRate        Int?     // bpm
  respiratoryRate  Int?     // bpm
  temperature      Float?   // Celsius
  oxygenSaturation Int?     // %
  recordedById     String
  recordedAt       DateTime @default(now())
}
